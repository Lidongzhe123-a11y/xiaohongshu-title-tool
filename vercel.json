{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "functions": {
    "app.py": {
      "runtime": "python3.10",
      "buildCommand": "pip install -r requirements.txt",
      "runtimeEnv": {
        "PORT": "${PORT}"
      }
    }
  }
}